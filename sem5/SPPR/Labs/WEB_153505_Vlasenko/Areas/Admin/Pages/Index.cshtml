@page
@using WEB_153505_Vlasenko.Areas.Admin.Pages;
@model IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Clothes[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Clothes[0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Clothes[0].ImagePath)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Clothes[0].Price)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Clothes)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<img src="@item.ImagePath" style="width: 100%; max-height: 200px; min-height: 200px; object-fit: contain;">
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i>Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i>Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
